<h1 class="display-4">Patient</h1>

<table class="table table-striped">
    

    <thead>
        <tr>
            <th>id</th>
            <th>name</th>
            <th>medicine</th>
            <th>sleepingpattern</th>
            <th></th>

        </tr>

    </thead>

    <tbody>
        <% patient.forEach(function(patient){
    %>
        <tr>
            <td><%=patient.id %></td>
            <td><%=patient.name %></td>
            <td><%=patient.medicine %></td>
            <td><%=patient.sleepingpattern %></td>
            <td>
                <a href="/edit/<%=patient.id %>" class="btn btn-primary">Edit</a>
                <form class="d-inline" action="/patient/delete/<%=patient.id %>" method="PUT">
                    <input type="submit" class="btn btn-danger" value="Delete">
                </form>
            </td>
        </tr>
        <%
}) %>


    </tbody>
</table>